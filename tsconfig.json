{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "dist",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./index.d.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
