<div class="container full">
  <div class="card bordered bg-success accent">
    <h3 class="card__title dark">Вход</h3>
    <form id="login-form" class="form login-form">

      {{#each inputComponents}}
        <div id="{{ this._id }}"></div>
      {{/each}}

    </form>

    <div class="spacer"></div>

    <div id="{{ loginBtnId }}"></div>

    <img
      id="{{ loadingId }}"
      class="loading"
      style="display: none"
      src="/images/loading.gif"
      alt="loading"
      height="40px"
    >

    <div id="{{registerBtnId}}"></div>
  </div>
</div>
