<div class="container full">
    <div class="card bordered bg-success accent">
        <form id="login-form" class="form auth-form">
            <div class="card__title h3">Вход</div>
            {{> inputText input=form.email }}
            {{> inputText input=form.password }}
        </form>

        <div class="spacer"></div>

        {{> button id=loginBtnId value='Войти' class='bg-primary white' }}
        <img
                id="{{ loading.id }}"
                class="loading"
                style="display: none"
                src="{{ loading.imgSrc }}"
                alt="loading"
                height="40px"
        >
        {{> button id=registerBtnId href='/register' value='Регистрация' underline=true }}
    </div>
</div>