<div class="container full">
    <img
            id="avatar"
            src="/images/avatar_default.png"
            alt="аватар"
            height="130"
            style="cursor: pointer"
    >
    <img
            id="avatar-change"
            class="dialog_activator"
            src="/images/avatar_change.png"
            alt="аватар"
            hidden
            height="130"
            style="cursor: pointer"
    >

    <!-- Modal dialog -->
    <div id="dialog" class="dialog">

        <!-- Dialog content -->
        <div class="dialog__content bordered">
            <span class="dialog__close-icon">&times;</span>
            <div class="card">
                <div class="h3 primary">Загрузите файл</div>
                <button class="btn btn_outline secondary">Выберите файл на компьютере</button>
                <button class="btn bg-primary white">Поменять</button>
            </div>
        </div>

    </div>

    <div class="break"></div>

    <div class="card bordered profile__profile-card bg-success accent">
        <form id="profile-form" class="form">
            <div class="card__title h3">Профайл</div>

            {{> inputText input=form.old_password }}
            {{> inputText input=form.new_password }}
            {{> inputText input=form.retype_new_password }}

        </form>

        <div class="spacer"></div>

        {{> button id=registerBtnId value='Сохранить' class='bg-dark white' href='/profile/show' }}
    </div>
</div>